<h2>Join course "<%= @course.name %>"</h2>

<%= form_for(@participation) do |f| %>
  <%= f.hidden_field :course_id, value: @course.id %>
  <%= f.hidden_field :codereview_group_id, value: @course.default_codereview_group.id %>

  <div class="form-group">
    <%= f.label :repository %>
    <%= f.text_field :repository, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :topic %>
    <%= f.text_field :topic, class:'form-control' %>
  </div>

  <div class="form-group">
    <%= f.submit class:'btn btn-success' %>
  </div>
<% end %>