<h1>Users</h1>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Admin?</th>
  </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.format_name(true), user %></td>
        <td><%= user.admin? %></td>
      </tr>
    <% end %>
  </tbody>
</table>